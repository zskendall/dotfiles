# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing h will grow the window’s width.
        # Pressing j will shrink the window’s height.
        # Pressing k will grow the window’s height.
        # Pressing l will shrink the window’s width.
        bindsym h resize grow width 10 px or 10 ppt
        bindsym j resize shrink height 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# move floating windows
mode "moveit" {
        bindsym h move left 20px
        bindsym j move down 20px
        bindsym k move up 20px
        bindsym l move right 20px

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+m focus floating; mode "moveit"


# --- GUI Functions

# Rebind the volume keys
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5% && killall -SIGUSR1 i3status
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5% && killall -SIGUSR1 i3status
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle && killall -SIGUSR1 i3status

# Rebind the brightness keys
bindsym XF86MonBrightnessUp exec "xbacklight -inc 20"
bindsym XF86MonBrightnessDown exec "xbacklight -dec 20"

# Rebind the mic mute key
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute 1 toggle

# Rebind the print-screen key
bindsym mod1+Print exec gnome-screenshot -a
bindsym Print exec gnome-screenshot

#bindsym $mod+mod1+k exec --no-startup-id xinput disable 10
bindsym $mod+mod1+m exec --no-startup-id "xinput list-props 10 | grep -qE 'Device Enabled.*1$' && xinput disable 10 || xinput enable 10

for_window [class="Nm-connection-editor"] floating enable, move position mouse
focus_follows_mouse off

# bind keys for mpc
bindsym $mod+mod1+s exec mpc stop
bindsym $mod+mod1+h exec mpc prev
bindsym $mod+mod1+l exec mpc next
bindsym $mod+mod1+t exec mpc toggle



