# --- Startups ---
bindsym $mod+Return exec xfce4-terminal
bindsym Mod1+Return exec xfce4-terminal
# start rofi (program laucher mode)
bindsym $mod+f exec rofi -show drun -display-drun "launch" -theme launcher
