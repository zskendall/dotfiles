/*
 * ROFI theme for application launcher
 * Based on theme by adi1090x:
 * https://github.com/ManuLosta/dotfiles/blob/master/August-2020/.config/rofi/launchers-git/appdrawer.rasi
 * (uses rofi-git version from AUR)
 */
configuration {
  display-drun:               "î¢¶";
  drun-display-format:        "{name}";
  font:                       "DejaVu Sans 14";
  show-icons:                 true;
}

@import "colorschemes/lookingglass.rasi"

window {
  border:                     2;
  height:                     400;
  location:                   north;
  padding:                    5;
  width:                      25%;
  y-offset:                   27;
}

mainbox {
  children:                   [ inputbar, listview ];
  padding:                    8 15;
  spacing:                    10;
}

inputbar {
  background-color:           @background;
  children:                   [ prompt, entry ];
  border-radius:              30;
  expand:                     false;
  position:                   center;
}

prompt {
  font:                       "Material Icons 20";
  margin:                     8 0 0 15;
}

entry {
  expand:                     true;
  padding:                    10 10 10 0;
  placeholder-color:          @text-color;
  text-color:                 @primary;
}

listview {
  columns:                    2;
  dynamic:                    true;
  layout:                     vertical;
  spacing:                    4;
}

element {
  orientation:                vertical;
}

element-icon {
  border:                     0;
  padding:                    6;
  size:                       50;
}

element-text {
  font:                       "DejaVu Sans 12";
}

element selected {
  border:                     0 0 2 0;
  border-color:               @primary;
  background-color:           @selected-background;
  text-color:                 @primary;
}

