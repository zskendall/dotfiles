# Assign button 10 to close a tab
"/usr/bin/xte 'keydown Control_L' 'key w' 'keyup Control_L'"
b:10

# Assign button 2 to open a tab and navigate to it
"/usr/bin/xte 'keydown Shift_L' 'mouseclick 2' 'usleep 100000' 'keyup Shift_L'"
b:2 + Release

# Try something crazy
"/usr/bin/xdotool key --clearmodifiers control+Page_Up"
Alt + b:1
"/usr/bin/xdotool key --clearmodifiers control+Page_Down"
Alt + b:10

# Mods for copy, paste, and enter (useful in Chrome)
"/usr/bin/xdotool key --clearmodifiers control+c"
Alt + b:8
"/usr/bin/xdotool key --clearmodifiers control+v"
Alt + b:9
"/usr/bin/xdotool key --clearmodifiers Return"
Alt + b:2

"~/.wacom_wheel"
b:14
