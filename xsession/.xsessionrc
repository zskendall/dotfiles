#!/bin/bash

# Remap right Alt key to Mod3 for i3.
xmodmap .xmodmap

# If at work, set up the displays.
if [ -r ~/.xsessionrc_google ];
then . ~/.xsessionrc_google;
fi

# Set background image.
feh --bg-scale ~/dotfiles/images/nikhita-singhal-496545-unsplash.jpg

# Start compton as a background process to have compositing. See
# https://wiki.archlinux.org/index.php/compton for more information.
compton -b
