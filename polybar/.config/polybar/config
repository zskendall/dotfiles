;=====================================================
;
;   To learn more about how to configure Polybar
;   go to https://github.com/jaagr/polybar
;
;   The README contains a lot of information
;
;=====================================================

[colors]
;background = ${xrdb:color0:#222}
background = #000
background-alt = #222
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
primary = #fff
secondary = #ffb52a
tertiary = #e60053
quarternary = #0a6cf5
alert = #bd2c40

[bar/example]
monitor = ${env:MONITOR:}
width = 100%
height = 27
;offset-x = 1%
;offset-y = 1%
radius = 6.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = "Sawasdee:bold:size=14;0"
font-1 = "MaterialIcons:size=14;4"
font-2 = "Font Awesome webfont:pixelsize=10;0"
font-3 = "MaterialIcons:size=16;4"

modules-left = i3
modules-center = weather
modules-right = volume xkeyboard date time powermenu

tray-position =
tray-padding = 2

;wm-restack = i3

cursor-click = pointer
cursor-scroll = ns-resize

[module/i3]
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-default = 

type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
; focused workspace will have underline and foreground shading
label-focused = %icon%
label-focused-background = ${colors.background-alt}
label-focused-underline = ${colors.primary}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %icon%
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

[module/weather]
type = custom/script

exec = ~/dotfiles/polybar/weather.sh
interval = 300 ; seconds

[module/volume]
type = internal/volume

format-volume-underline = ${colors.tertiary}
format-volume = <label-volume> <bar-volume>
label-volume = %{T2}%{T-}
label-volume-foreground = ${root.foreground}

format-muted-foreground = ${colors.foreground-alt}
label-muted = %{T4}%{T-}
label-muted-underline = ${colors.tertiary}

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = "%{T2}%{T-} "
format-prefix-foreground = ${colors.foreground-alt}
format-prefix-underline = ${colors.secondary}

label-layout = %layout%
label-layout-underline = ${colors.secondary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}

[module/date]
type = internal/date
interval = 5

date = "%A, %d %B %Y"
date-alt = " %Y-%m-%d"

format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.quarternary}

label = %date%

[module/time]
type = internal/date
interval = 5

time = %H:%M
time-alt = %H:%M:%S

format-prefix-foreground = ${colors.foreground-alt}
format-underline = #7e01af

label = %time%

[module/powermenu]
type = custom/menu

format-spacing = 1
expand-right = false

label-open = %{T4}
label-open-foreground = ${colors.primary}
label-close = 
label-close-foreground = ${colors.primary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 =  
menu-0-0-exec = menu-open-1
menu-0-1 = 
menu-0-1-exec = menu-open-2
menu-0-2 = 
menu-0-2-exec = menu-open-3

; power confirmation
menu-1-0 = 
menu-1-0-exec = menu-open-0
menu-1-1 = 
menu-1-1-exec = sudo poweroff

; reboot confirmation
menu-2-0 = 
menu-2-0-exec = menu-open-0
menu-2-1 = 
menu-2-1-exec = sudo reboot

; logout confirmation
menu-3-0 = 
menu-3-0-exec = menu-open-0
menu-3-1 = %{T-}
menu-3-1-exec = gnome-session-quit

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

; vim:ft=dosini
